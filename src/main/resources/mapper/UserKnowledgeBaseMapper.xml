<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.phoebe.mapper.UserKnowledgeBaseMapper">

    <resultMap id="UserKnowledgeBaseResultMap" type="com.phoebe.entity.UserKnowledgeBase">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="indexId" column="index_id"/>
        <result property="workspaceId" column="workspace_id"/>
        <result property="indexName" column="index_name"/>
        <result property="status" column="status"/>
        <result property="lastSyncAt" column="last_sync_at"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <insert id="insert" parameterType="com.phoebe.entity.UserKnowledgeBase" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user_knowledge_base (user_id, index_id, workspace_id, index_name, status, last_sync_at, created_at, updated_at)
        VALUES (#{userId}, #{indexId}, #{workspaceId}, #{indexName}, #{status}, #{lastSyncAt}, #{createdAt}, #{updatedAt})
    </insert>

    <update id="update" parameterType="com.phoebe.entity.UserKnowledgeBase">
        UPDATE user_knowledge_base
        SET user_id = #{userId},
            index_id = #{indexId},
            workspace_id = #{workspaceId},
            index_name = #{indexName},
            status = #{status},
            last_sync_at = #{lastSyncAt},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <select id="findById" resultMap="UserKnowledgeBaseResultMap">
        SELECT * FROM user_knowledge_base WHERE id = #{id}
    </select>

    <select id="findByUserId" resultMap="UserKnowledgeBaseResultMap">
        SELECT * FROM user_knowledge_base WHERE user_id = #{userId}
    </select>

    <select id="findByIndexId" resultMap="UserKnowledgeBaseResultMap">
        SELECT * FROM user_knowledge_base WHERE index_id = #{indexId}
    </select>

    <select id="findAll" resultMap="UserKnowledgeBaseResultMap">
        SELECT * FROM user_knowledge_base ORDER BY created_at DESC
    </select>

    <delete id="deleteById">
        DELETE FROM user_knowledge_base WHERE id = #{id}
    </delete>

    <delete id="deleteByUserId">
        DELETE FROM user_knowledge_base WHERE user_id = #{userId}
    </delete>

</mapper>
